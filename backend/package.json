{
  "name": "valoris-backend",
  "version": "1.0.0",
  "description": "Backend do Valoris - Simulador Geopol√≠tico",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "download-geojson": "node scripts/download-geojson.js",
    "reset-db": "node scripts/resetDatabase.js",
    "reset-db:no-seed": "node scripts/resetDatabase.js --no-seed",
    "reset-db:keep-users": "node scripts/resetDatabase.js --keep-users",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.90.1",
    "@turf/turf": "^7.3.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "detect-port": "^2.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "node-cron": "^3.0.3",
    "socket.io": "^4.6.1",
    "xss-clean": "^0.1.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "type": "module",
    "testEnvironment": "node",
    "transform": {},
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/logs/"
    ],
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
